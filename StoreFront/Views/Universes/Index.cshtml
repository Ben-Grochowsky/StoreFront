@model IEnumerable<StoreFront.DATA.EF.Models.Universe>

@{
    ViewData["Title"] = "Universes";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniverseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniverseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniverseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniverseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniverseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
